[
  {
    "layer": "bottom",
    "output": "HDMI-A-1",
    "position": "top",
    "height": 36,
    "reload_style_on_change": true,
    "modules-left": [
      "group/workspaces",
      "sway/scratchpad"
    ],
    "modules-center": [
      "mpris"
    ],
    "modules-right": [
      "custom/pacman",
      "disk",
      "group/audio",
      "tray",
      "clock"
    ],
    "group/workspaces": {
      "orientation": "inherit",
      "modules": [
        "sway/workspaces",
        "wlr/taskbar"
      ]
    },
    "group/audio": {
      "orientation": "inherit",
      "modules": [
        "wireplumber",
        "bluetooth"
      ],
      "drawer": {
        "transition-duration": 500,
        "children-class": "drawer-child",
        "click-to-reveal": false
      }
    },
    "sway/workspaces": {
      "disable-scroll": true,
      "disable-click": false,
      "format": "{index}"
    },
    "wlr/taskbar": {
      "format": "{icon}",
      "icon-size": 20,
      "icon-theme": "Papirus-Dark",
      "tooltip-format": "{name}",
      "on-click": "activate",
      "on-click-middle": "close",
      "app_ids-mapping": {
        "firefoxdeveloperedition": "firefox-developer-edition"
      }
    },
    "sway/mode": {
      "format": "<span style=\"italic\">{}</span>"
    },
    "sway/scratchpad": {
      "format": "{icon} {count}",
      "show-empty": false,
      "format-icons": [
        "",
        "Ôãí"
      ],
      "tooltip": true,
      "tooltip-format": "{app}: {title}"
    },
    "tray": {
      "spacing": 10
    },
    "clock": {
      "format": "{:%a %Y/%m/%d %R}",
      "timezone": ""
    },
    "disk": {
      "format": "ÔÇ† {specific_free:0.1f}GB",
      "unit": "GB"
    },
    "custom/pacman": {
      "format": "{icon} {0}",
      "return-type": "json",
      "format-icons": {
        "pending-updates": "Û±ç∑",
        "updated": "ÔÅù"
      },
      "exec-if": "which waybar-updates",
      "exec": "waybar-updates"
    },
    "mpris": {
      "interval": 0.5,
      "format": "{player_icon} {dynamic}",
      "format-paused": "{status_icon} <i>{dynamic}</i>",
      "format-stopped": "{status_icon}",
